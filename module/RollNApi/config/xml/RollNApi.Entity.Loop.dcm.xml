<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="RollNApi\Entity\Loop">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <many-to-one field="parentLoop" target-entity="RollNApi\Entity\Loop" inversed-by="childLoop">
      <join-columns>
        <join-column name="loop_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="childLoop" target-entity="RollNApi\Entity\Loop" mapped-by="parentLoop"/>
  </entity>
</doctrine-mapping>
